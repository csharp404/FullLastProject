@model WebApp.ViewModels.DepartmentViewModelCreate

@{
    var ActionName = Model == null ? "Create" : "Edit";
    ViewData["Title"] = ActionName;
}

<h1>@ActionName</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="@ActionName">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@ActionName" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-dark" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
